---
import "../styles/global.css";
import Layout from '../layouts/Layout.astro';
import Badge from '../components/Badge.astro';
import Icon from '../components/Icon.astro';
import LinkedIn from "../components/icons/LinkedIn.astro";
import GitHub from "../components/icons/GitHub.astro";
import MailIcon from "../components/icons/MailIcon.astro";
import SocialPill from "../components/SocialPill.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from '../components/SectionContainer.astro';
import Briefcase from '../components/icons/Briefcase.astro';
import CodeIcon from "../components/icons/CodeIcon.astro";
import Projects from "../components/Projects.astro";

---

<Layout title="Portfolio - Lucas Ferreira - Software Developer with 2+ years experience"
description="Welcome to my portfolio! I'm Lucas Ferreira, a passionate software developer with over 2 years of experience in web development. Explore my projects and get in touch!">
    <main class="w-full mx-auto lg:w-[740px] px-6 py-12 flex flex-col gap-y-15">
        <SectionContainer id="home">
            <section class="flex flex-col md:flex-row md:items-center gap-x-6">
                <Icon name="user-icon" className="rounded-full w-14 h-14 mb-2"/>
                            <a 
            href="https://www.linkedin.com/in/lferreiradev"
            target="_blank" rel="noopener"
            class="inline-block align-middle">
            <Badge>Ready to work</Badge>
            </a>
            </section>
        <h1 class="text-3xl  md:text-4xl lg:text-5xl font-bold text-white flex flex-row gap-x-4 pb-6 lg:pb-10">Hello, I'm Lucas 

    </h1>
            <h2 class="text-xl lg:text-2xl font-semibold text-wrap max-w-[700px]"><span class="text-yellow-200/90">+2 years experience.</span>
                <span class="opacity-80">Software web Development. Buenos Aires, Argentina</span>
            </h2>
            <p class="text-lg leading-7 opacity-80">
                I'm a passionate developer with a love for creating beautiful and functional web applications. With a strong background in JavaScript, React, and Node.js, I enjoy building projects that solve real-world problems and enhance user experiences.
            </p>
            <ul class="flex flex-row gap-2 flex-wrap text-lg leading-7 opacity-80">
                <li>
                    <SocialPill link="https://www.linkedin.com/in/lferreiradev">
                        <LinkedIn className="size-4 md:size-6 inline-block align-middle"/>LinkedIn
                    </SocialPill>
                </li>
                <li>
                    <SocialPill link="https://github.com/lucasFerreiraUBA">
                        <GitHub className="size-4 md:size-6 inline-block align-middle"/>GitHub
                    </SocialPill>
                </li>
                <li>
                    <SocialPill link="mailto:lucasalejandrodev@gmail.com">
                        <MailIcon className="size-4 md:size-6 inline-block align-middle"/>Contact me
                    </SocialPill>
                </li>
            </ul>
        </SectionContainer>
        <SectionContainer id="experience">
            <h2 class="text-3xl font-semibold flex items-center gap-x-3">
                <Briefcase className="size-6"/>
                Experience
            </h2>
            <Experience />
        </SectionContainer>
        <SectionContainer id="projects">
            <h2 class="text-3xl font-semibold">
                <CodeIcon className="size-7 inline-block align-middle mr-2"/>
                Projects</h2>
           <Projects />
        </SectionContainer>
        <SectionContainer id="contact">
            <h2 class="text-3xl font-semibold">Contact Me</h2>
            <p class="text-lg leading-7 opacity-80">
                If you'd like to get in touch, feel free to reach out via email at <a href="mailto:lucasalejandrodev@gmail.com" class="underline">lucasalejandrodev@gmail.com</a>.
            </p>
</Layout>
